##################################################################################
# VARIABLES
##################################################################################

variable "region" {
  default = "us-east-1"
}


##################################################################################
# PROVIDERS
##################################################################################

provider "aws" {
  region = var.region
}

##################################################################################
# RESOURCES
##################################################################################

resource "aws_s3_bucket" "b" {
  bucket = "__s3bucketname__-__environment__"
  acl    = "public-read"

}